{
    // 纯 QuickJs ES2020 支持
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": [
            "ES2020"
        ],
        "forceConsistentCasingInFileNames": true, // 强制文件名大小写一致
        "noEmit": false, // 不生成文件
        "strict": true, // 严格模式
        "strictNullChecks": true, // 严格空值检查
        "noImplicitAny": true, // 不允许隐式any类型
        "noEmitHelpers": true, // 不生成辅助代码
        "baseUrl": ".",
        "outDir": "PlotX-Scripts/",
        "paths": {},
        "typeRoots": [
            "./types"
        ],
    },
    "include": [
        "src/**/*.ts",
        "types/qjspp.d.ts",
        "types/globalThis.d.ts"
    ],
    "exclude": [
        "PlotX-Scripts/**/*.js"
    ]
}