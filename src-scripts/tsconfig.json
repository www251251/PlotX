{
    // 纯 QuickJs ES2020 支持
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": [
            "ES2020"
        ],
        "forceConsistentCasingInFileNames": true, // 强制文件名大小写一致
        "checkJs": false, // 检查js文件
        "allowJs": false, // 允许编译js文件
        "noEmit": false, // 不生成文件
        "strict": true, // 严格模式
        "strictNullChecks": true, // 严格空值检查
        "noImplicitAny": true, // 不允许隐式any类型
        "noEmitHelpers": true, // 不生成辅助代码
        "baseUrl": "src",
        "outDir": "PlotX-Scripts/",
        "paths": {
            "@levilamina": [
                "../types/@levilamina/index.d.ts"
            ],
            "@minecraft": [
                "../types/@minecraft/index.d.ts"
            ],
            "@plotx": [
                "../types/@plotx/index.d.ts"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "types/qjspp.d.ts",
        "types/globalThis.d.ts"
    ],
    "exclude": [
        "PlotX-Scripts/**/*.js"
    ]
}